<div class="g_6 contents_header">
  <h3 class="i_16_dashboard tab_label">Dashboard</h3>
</div>

<div class="g_12 separator"><span></span></div>

<div class="g_4">
  <div class="widget_header">
    <h4 class="widget_header_title wwIcon i_16_ui">Contacts</h4>
  </div>
  <div class="widget_contents">
    <div class="banner-box">
      <span class="highlight-number">
        <%= @total_contacts_count %>
      </span>
      <span class="small-text">
        ACTIVE<br/>CONTACTS
      </span>
      <div class="clear"></div>
    </div>
    <div class="contacts-stat">
      <%= pluralize(@text_contacts_count, "Texting Contacts") %>
      <br/>
      <%= pluralize(@call_contacts_count, "Calling Contacts") %>
    </div>
    <div class="link">
      <%= image_tag("dashboard/custom/add_contacts.png") %>
      <%= link_to "Add and update contacts", contacts_path %>
      <div class="clear"></div>
    </div>
  </div>
</div>
<div class="g_4"></div>
<div class="g_4">
  <div class="widget_header">
    <h4 class="widget_header_title wwIcon i_16_tabs">Billing Summary</h4>
  </div>
  <div class="widget_contents">
    <div class="banner-box">
      <div class="balance">
        <%= "$#{"%.3f" % current_user.current_balance}" %>
        Current Balance
      </div>
    </div>
    <div class="balance-stat">
      It will cost
      $<%= "%.3f" % @cost_for_text %>
      to send a text to your contacts<br/>
      It will cost
      $<%= "%.3f" % @cost_for_call %>
      to send a call to your contacts
    </div>
    <div class="link">
      <%= image_tag("dashboard/custom/add_contacts.png") %>
      <%= link_to "Add Funds to you Account", "#" %>
      <div class="clear"></div>
    </div>
  </div>
</div>

<div class="g_12">
  <div class="widget_header wwOptions">
    <h4 class="widget_header_title wwIcon i_16_data">Recent Activity</h4>
    <div class="w_Options i_16_settings">
    </div>
  </div>
  <div class="widget_contents noPadding">
    <table class="datatable tables">
      <thead>
        <tr>
          <th>Date</th>
          <th>Call or Text</th>
          <th>List Sent to</th>
          <th>% of Completed</th>
          <th>Cost</th>
          <th>View Progress</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>Dec 14, 2012</td>
          <td>230</td>
          <td>December Special</td>
          <td>100</td>
          <td>$3.400</td>
          <td>
            <%= link_to "view", "#" %>
          </td>
        </tr>
        <tr>
          <td>Dec 15, 2012</td>
          <td>250</td>
          <td>Important</td>
          <td>87</td>
          <td>$4.400</td>
          <td>
            <%= link_to "view", "#" %>
          </td>
        </tr>
        <tr>
          <td>Dec 16, 2012</td>
          <td>230</td>
          <td>Real Time</td>
          <td>50</td>
          <td>$3.400</td>
          <td>
            <%= link_to "view", "#" %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>