<div class="g_6 contents_header">
  <h3 class="i_16_ui tab_label">Do Not Call List</h3>
</div>
<div class="g_2"></div>
<div class="g_2"></div>
<div class="g_2">
  <%= link_to "Back to Contacts", contacts_path, :class => "simple_buttons contact-button" %>
</div>

<div class="g_12 separator"><span></span></div>

<div class="g_12">
  <div class="widget_header wwOptions">
    <h4 class="widget_header_title wwIcon i_16_tables">
      Manage DNC List
    </h4>
  </div>
  <div class="widget_contents noPadding">
    <table class="tables" id="dnc-table">
      <thead>
      <th>Phone</th>
      <th>Name</th>
      <th>
        <div class="ajax-loading" style="display:none">
          <%= image_tag("dashboard/Icons/Load/load-8.gif") %>
        </div>
      </th>
      </thead>
      <tbody>
        <% if @dnc.present? %>
          <% @dnc.each do |dnc| %>
            <%= render :partial => "dnc_tiny", :locals => {:dnc => dnc} %>
          <% end %>
        <% else %>
          <tr>
            <td colspan="5" style="text-align:center">
              No Records Found.
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>