<% title " - Contact Us" %>

<div class="header header_thin">
  <div class="container_12">
    <div class="breadcrumbs">
      <%= link_to "Homepage", root_path %>
      <span class="separator">&nbsp;</span>
      <a href="#">Our Hosting</a>
      <span class="separator">&nbsp;</span>
      Contact us
    </div>
  </div>
</div>


<div class="middle cols2">
  <div class="container_12">

    <!-- content -->
    <div class="content">

      <div class="post-item post-detail">

        <div class="post-title">
          <h1>We're About Ready to Relaunch!</h1>
        </div>

        <div class="entry">
          <p>
            The Team here at RoboCent is putting the final touches on our new, 
            awesome platform! We've set a tentative relaunch date of January 30, 2013 
            -- fill out the form below to be notified of our relaunch!
          </p>

          <div class="clear"></div>
        </div>
      </div>
      <!--/ post item -->


      <!-- add comment -->
      <div class="add-comment contact-form">
        <h3>Keep me Informed!</h3>

        <div id="results" style="padding-left: 20px;color:#FF0000;">
          <% if @temp_user.errors.any? %>
            <span style="color:#FF0000;">
              <%= pluralize(@temp_user.errors.count, "error") %> prohibited this message from being saved:
              <br/>
              <% @temp_user.errors.full_messages.each do |msg| %>
                <%= msg %><br/>
              <% end %>
            </span>
          <% end %>
          <% if flash.present? %>
            <span style="color:#FF0000;">
              <%= flash.now[:alert] %>
            </span>
          <% end %>
        </div>

        <div class="comment-form">
          <%= form_for(@temp_user) do |f| %>

            <div class="row alignleft">
              <label><strong>Name</strong></label>
              <%= f.text_field :name, :class => "inputtext input_middle required" %>
            </div>

            <div class="space"></div>

            <div class="row  alignleft">
              <label><strong>Email</strong> (never published)</label>
              <%= f.text_field :email, :class => "inputtext input_middle required" %>
            </div>

            <div class="clear"></div>

            <div class="row rowSubmit">
              <input type="submit" id="send" value="SEND MESSAGE" class="btn-submit" />
              <a onclick="document.getElementById('contactForm').reset();return false" href="#" class="link-reset">reset all fields</a>
            </div>
          <% end %>
        </div>
      </div>
      <!--/add comment -->
    </div>
    <!--/ content -->

    <!-- sidebar -->
    <%= render "shared/location" %>
    <!--/ sidebar -->

    <div class="clear"></div>
  </div>
</div>
