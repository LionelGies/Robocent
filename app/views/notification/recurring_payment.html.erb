Dear <%= @user.name %>,
<br/><br/>
<% if @event.event_type == "invoice.payment_succeeded" %>
  Thanks for your payment!
<% else %>
  Your payment is failed. Please update your payment method.
<% end %>
<br/><br/>

<% @period = @invoice['lines']['subscriptions'].first['period'] %>
<%  @billing_period = "#{Time.at(@period['start']).strftime("%m/%d/%Y")} - #{Time.at(@period['end']).strftime("%m/%d/%Y")}" %>

<% @starting_balance = @invoice['starting_balance'].to_f/100.0 %>
<% if @starting_balance == 0.0 && (defined?(@invoice['lines']['invoiceitems'].first['amount'])).present? %>
  <% @starting_balance = @invoice['lines']['invoiceitems'].first['amount'] %>
<% end %>
<% @current_charges = @invoice['amount_due'].to_f/100.0 %>

<% @ending_balance = @invoice['ending_balance'].to_f/100.0 %>
<% @date = Time.at(@invoice['date']) %>

<% @paid = @invoice['paid'] %>


Billing Period: <%= @billing_period %><br/><br/>
Starting Balance: <%= @starting_balance %><br/>
Current Charges: <%= @current_charges %><br/>
Ending Balance: <%= @ending_balance %><br/><br/>

Paid: <%= @paid %><br/>
Date: <%= @date %>

