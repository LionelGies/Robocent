<div class="g_12">
  <h4 class="widget_header_title">
    By submitting this form, it will charge your payment method immediately.
  </h4>
</div>
<div class="g_12">
  <div class="widget_contents noPadding">
    <%= form_tag fund_account_path, :id => "fund-account-form" do %>
      <div class="line_grid">
        <div class="g_3" style="text-align:right">
          <span class="label">$</span>
        </div>
        <div class="g_9">
          <%= text_field_tag :amount, "", :class => "simple_field" %>
        </div>
      </div>
      <div class="line_grid">
        <div class="g_3"></div>
        <div class="g_9">
          <%= submit_tag "Add Fund", :class => "submitIt simple_buttons" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class="clear"></div>