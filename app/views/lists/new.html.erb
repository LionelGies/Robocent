<div class="g_6 contents_header">
  <h3 class="i_16_ui tab_label">New List</h3>
</div>
<div class="g_2"></div>
<div class="g_2">
  <%= link_to "Add Contacts", new_contact_path, :class => "simple_buttons contact-button" %>
</div>
<div class="g_2">
  <%= link_to "Back to Lists", contacts_path, :class => "simple_buttons contact-button" %>
</div>

<div class="g_12 separator"><span></span></div>

<div class="g_12" id="http_form">
  <% if @list.errors.any? %>
    <div class="g_12">
      <div class="form-error">
        Please correct these <%= pluralize(@list.errors.full_messages.count, "error") %>:<br/>
        <% @list.errors.full_messages.each do |msg| %>
          * <%= msg %><br/>
        <% end %>
      </div>
    </div>
  <% end %>

  <%= render "form" %>
</div>