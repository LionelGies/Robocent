<div class="g_12">
  <div class="widget_contents noPadding">
    <%= form_for(@list ||= List.new) do |f| %>
      <div class="line_grid">
        <div class="g_3">
          <span class="label">List Name<span class="must">*</span></span>
        </div>
        <div class="g_9">
          <%= f.text_field :name, :class => "simple_field", :required => true %>
        </div>
      </div>
      <% if @list.new_record? %>
        <div class="line_grid">
          <div class="g_3">
            <span class="label">Type of List<span class="must">*</span></span>
          </div>
          <div class="g_9">
            <%= f.select :type_of_list, [['Call', 'call'],['Text', 'text']], {}, :class => "simple_form", :required => true %>
          </div>
        </div>
      <% end %>
      <div class="line_grid">
        <div class="g_3">
          <span class="label">Keyword<span class="must">*</span></span>
        </div>
        <div class="g_9">
          <%= f.text_field :keyword, :class => "simple_field", :required => true %>
          <div class="field_notice">
            When subscribers will text that key word to your robocent number,
            application will automatically add them to the list.
          </div>
        </div>
      </div>
      <div class="line_grid">
        <div class="g_3"></div>
        <div class="g_9">
          <%= f.submit :class => "submitIt simple_buttons" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class="clear"></div>