<% title " - Contact Us" %>

<div class="header header_thin">
  <div class="container_12">
    <div class="breadcrumbs">
      <%= link_to "Homepage", root_path %>
      <span class="separator">&nbsp;</span>
      <a href="#">Our Hosting</a>
      <span class="separator">&nbsp;</span>
      Contact us
    </div>
  </div>
</div>


<div class="middle cols2">
  <div class="container_12">

    <!-- content -->
    <div class="content">

      <div class="post-item post-detail">

        <div class="post-title">
          <h1>Contact us now!</h1>
        </div>

        <div class="entry">
          <p>Send us a message below and we will get back to you as quickly as possible (max. 12 hours). For immediate assistance, please use the options on the right.</p>

          <div class="clear"></div>
        </div>
      </div>
      <!--/ post item -->


      <!-- add comment -->
      <div class="add-comment contact-form">
        <h3>Leave us a message</h3>

        <div id="results" style="padding-left: 20px;color:#FF0000;">
          <% if @contact_us.errors.any? %>
            <span style="color:#FF0000;">
              <%= pluralize(@contact_us.errors.count, "error") %> prohibited this message from being saved:
              <br/>
              <% @contact_us.errors.full_messages.each do |msg| %>
                <%= msg %><br/>
              <% end %>
            </span>
          <% end %>
          <% if flash.present? %>
            <span style="color:#FF0000;">
              <%= flash.now[:alert] %>
            </span>
          <% end %>
        </div>

        <div class="comment-form">
          <%= form_for(@contact_us, :url => contact_us_submit_path) do |f| %>
            <div class="row alignleft">
              <label><strong>Name</strong></label>
              <%= f.text_field :name, :class => "inputtext input_middle required" %>
            </div>

            <div class="space"></div>

            <div class="row  alignleft">
              <label><strong>Email</strong> (never published)</label>
              <%= f.text_field :email, :class => "inputtext input_middle required" %>
            </div>

            <div class="clear"></div>

            <div class="row">
              <label><strong>Message</strong></label>
              <%= f.text_area :content, :class => "textarea textarea_middle required", :size => "30x10" %>
            </div>

            <div class="row rowSubmit">
              <input type="submit" id="send" value="SEND MESSAGE" class="btn-submit" />
              <a onclick="document.getElementById('contactForm').reset();return false" href="#" class="link-reset">reset all fields</a>
            </div>
          <% end %>
        </div>
      </div>
      <!--/add comment -->
    </div>
    <!--/ content -->

    <!-- sidebar -->
    <%= render "shared/location" %>
    <!--/ sidebar -->

    <div class="clear"></div>
  </div>
</div>
