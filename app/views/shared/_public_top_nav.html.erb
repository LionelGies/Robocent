<div id="header">
  <div class="top_sec">
    <div class="container">
      <ul>
        <li class="number">757 821 2121</li>
      </ul>
      <div class="buttons">
        <%= link_to "", "", :class => "chat", :onClick => "return SnapABug.startLink();" %>
        <div id="container">
          <div id="topnav" class="topnav">
            <%= link_to login_path, :class => "signin" do %>
              <span></span>
            <% end %>
          </div>
          <fieldset id="signin_menu">
            <%= form_tag user_sessions_path, :class => "loginform" do %>
              <p>
                <%= label_tag :email %>
                <%= text_field_tag :email, "", :tabindex => "4" %>
              </p>
              <p>
                <%= label_tag :password %>
                <%= password_field_tag :password, "", :tabindex => "5" %>
              </p>
              <p class="remember">
                <%= submit_tag "Login", :id => "signin_submit", :tabindex => "6" %>
                <%= check_box_tag :remember_me, 1, params[:remember_me], :tabindex => "7" %>
                <%= label_tag :remember_me %>
              </p>
              <p class="forgot">
                <%= link_to "Forgot your password?", new_password_reset_path, :id => "resend_password_link" %>
              </p>
            <% end %>
          </fieldset>
        </div>
      </div>
    </div>
  </div>
  <div class="main_bar">
    <div class="container">
      <%= link_to image_tag("next-logo.png", :alt => "", :border => "0", :class => "logo"), root_path %>
      <div class="navi">
        <ul id="menu">
          <li class="<%= 'selected' if current_page?(root_path) %>">
            <%= link_to "Home", root_path, :class => "#{'selected' if current_page?(root_path)}" %>
          </li>
          <li class="<%= 'selected' if current_page?(solutions_path) %>">
            <%= link_to "Solutions", solutions_path, :class => "#{'selected' if current_page?(solutions_path)}" %>
            <ul>
              <li><%= link_to "Residential Communities", residential_communities_path  %></li>
            </ul>
          </li>
          <li class="last <%= 'selected' if current_page?(contact_us_path) %>">
            <%= link_to "Contact Us", contact_us_path, :class => "#{'selected' if current_page?(contact_us_path)}" %>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
<div class="clear"></div>
