<div class="top_panel">
  <div class="wrapper">
    <div class="user">
      <%= link_to profile_path do %>
        <img src="/assets/dashboard/user_avatar.png" class="user_avatar" alt=""/>
        <span class="label">
          <% if current_user.present? %>
            <%= current_user.name ? current_user.name : "Profile" %>
          <% end %>
        </span>
      <% end %>
    </div>
    <div class="top_links">
      <ul>
        <li class="small">
          <%= link_to logout_path do %>
            <span class="label">Log Out</span>
          <% end %>
        </li>
        <li class="small">
          <%= link_to billing_path do %>
            <span class="label">Balance
              <% if current_user.present? %>
                <%= "$%.3f" % current_user.current_balance %>
              <% end %>
            </span>
          <% end %>
        </li>
        <li class="i_22_ui">
          <%= link_to contacts_path do %>
            <span class="label">Contacts</span>
          <% end %>
        </li>
        <li class="i_22_inbox top_inbox">
          <%= link_to inbox_path do %>
            <span class="label lasCount">Inbox</span>
            <% @unread_messages_count = current_user.sms_messages.count(:all, :conditions => ["sms_messages.read = ? and status = ?", false, "received"])  %>
            <span class="small_count">
              <%= @unread_messages_count %>
            </span>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</div>

<style type="text/css">
  .top_links > ul > li.small > a {
    padding-left: 0px;
  }
</style>