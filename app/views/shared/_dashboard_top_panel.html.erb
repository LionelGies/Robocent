<div class="top_panel">
  <div class="wrapper">
    <div class="user">
      <%= image_tag("dashboard/user_avatar.png", :class => "user_avatar") %>
      <span class="label">
        <% if current_user.present? %>
          <%= current_user.name %>
        <% end %>
      </span>
      <!-- Top Tooltip -->
      <div class="top_tooltip">
        <div>
          <ul class="user_options">
            <li class="i_16_profile"><a href="#" title="Profile"></a></li>
            <li class="i_16_tasks"><a href="#" title="Tasks"></a></li>
            <li class="i_16_notes"><a href="#" title="Notes"></a></li>
            <li class="i_16_options"><a href="#" title="Options"></a></li>
            <li class="i_16_logout">
              <%= link_to "", logout_path, :title => "Log-Out" %>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div class="top_links">
      <ul>
        <li>
          <a href="#" title="">
            <span class="label">Balance $10.000</span>
          </a>
        </li>
        <li class="i_22_ui">
          <a href="#" title="Contacts">
            <span class="label">Contacts</span>
          </a>
        </li>
        <li class="i_22_inbox top_inbox">
          <a href="#" title="Inbox">
            <span class="label lasCount">Inbox</span>
            <span class="small_count">3</span>
          </a>
        </li>
      </ul>
    </div>
  </div>
</div>