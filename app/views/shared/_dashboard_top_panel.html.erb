<div class="top_panel">
  <div class="wrapper">
    <div class="user">
<%#= image_tag("dashboard/user_avatar.png", :class => "user_avatar") %>
      <%= link_to profile_path do %>
        <img src="/assets/dashboard/user_avatar.png" class="user_avatar" alt=""/>
        <span class="label">
          <% if current_user.present? %>
            <%= current_user.name %>
          <% end %>
        </span>
      <% end %>
      <ul class="user_options" style="position: relative;float: right;margin: 8px 33px;">
        <li class="i_16_logout">
          <%= link_to "", logout_path, :title => "Log-Out" %>
        </li>
      </ul>
    </div>
    <div class="top_links">
      <ul>
        <li class="small">
          <a href="#" title="">
            <span class="label">Balance
              <% if current_user.present? %>
                <%= "$#{current_user.current_balance}" %>
              <% end %>
            </span>
          </a>
        </li>
        <li class="i_22_ui">
          <a href="#" title="">
            <span class="label">Contacts</span>
          </a>
        </li>
        <li class="i_22_inbox top_inbox">
          <a href="#" title="">
            <span class="label lasCount">Inbox</span>
            <span class="small_count">3</span>
          </a>
        </li>
      </ul>
    </div>
  </div>
</div>

<style type="text/css">
  .top_links > ul > li.small > a {
    padding-left: 0px;
  }
</style>